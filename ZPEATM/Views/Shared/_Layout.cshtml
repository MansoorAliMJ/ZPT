<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZPEATM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ZPEATM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-something" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">

                    <img src="~/images/ZPEWhite.png" alt="Logo" style="width:80px">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav text-white">
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")"
                               asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Career" ? "active" : "")"
                               asp-controller="Career" asp-action="Index">Career</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted py-4 text-white" style="background:#170d2b">
        <div class="container">
            <div class="row">
                <!-- Company Section -->
                <div class="col-md-4 mb-3" style="color:white">
                    <h5>Company</h5>
                    <img src="~/images/ZPEWhite.png" alt="Logo" style="max-width: 120px;">
                    <p class="mt-2">
                        Izet E Payments Pvt Ltd<br>
                        Coimbatore, Tamil Nadu,<br>
                        India - 641001
                    </p>
                </div>

                <!-- Quick Links Section -->
                <div class="col-md-4 mb-3" style="color:white">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Career" asp-action="Index">Career</a></li>
                        <li><a asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    </ul>
                </div>

                <!-- Contact Us Section -->
                <div class="col-md-4 mb-3" style="color:white">
                    <h5>Contact Us</h5>
                    <p>
                        8th Floor, Mayflower Valencia,<br>
                        Reliance Next Building, Nava India Rd Signal,<br>
                        Coimbatore, Tamil Nadu 641004<br>
                        Phone: <a href="tel:09843898458">098438 98458</a><br>
                        Email: <a href="mailto:info@izetepayments.com">info@izetepayments.com</a>
                    </p>
                </div>

       
            </div>

            <hr>
            <div class="text-center" style="color:white">
                &copy; 2025 - ZPEATM
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
